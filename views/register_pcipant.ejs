    <form name="f1" id="f1" action="register-mentor" method="post" enctype="multipart/form-data">
      <div class="container register" style="margin-top:100px">
        <center>
          <div class="d-flex flex-row xyz" style="margin-bottom: 40px; justify-content: center;align-items: center;">
            <img
              src="assets/img/clients/about-img2.png"
              height="70px"
              width="85px"
              style="margin: 10px"
            />
            <img
              src="assets/img/clients/uem2.png"
              height="70px"
              width="85px"
              style="margin: 10px"
            />
            <img
              src="assets/img/clients/acm-iem.png"
              height="70px"
              width="85px"
              style="margin: 10px"
            />
          </div>
          
          <h1 >Register as a Participant </h1></center>
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
              <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                  Guidelines
                </button>
              </h2>
              <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                <div class="accordion-body">
                  By clicking <strong>Next</strong> you agree to our mentioned <strong>guidelines</strong> , to read our Guidelines, <a href="/guidelines" target="_blank">click here</a>
                 <br>
                  <br>
                  <p>
                    <input type="checkbox" required name="checkbox" value="check" id="agree"/> &nbsp;&nbsp;I agree to the Guidelines</p>
                    <button type="button" id="button1" class="btnSubmit "  data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">Next</button>
                         </div>
              </div>
            </div>
            <div class="accordion-item">
              <a class="accordion-header" id="panelsStayOpen-headingTwo">
               
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                Contributor Details
                </button>
              </h2>
              <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                    <div class="form">
                        <div class="note">
                            <p>Details of Contributor</p>
                        </div>
                        <br>
                        <div class="form-content">
                            <div class="row">
                                    <div class="col-md-6">
                                      &nbsp;&nbsp;&nbsp;&nbsp;<label for="image">Personal Details : -</label>
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="mentor_name" name="mentor_name" required placeholder="Name *" required/>
                                    </div>
                                    
                                     <div class="form-group">
                                        <input type="text" class="form-control" id="mentor_email" name="mentor_email" required placeholder="E-mail *" required/>
                                    </div>
                                    
                                     <div class="form-group">
                                        <input type="text" class="form-control" id="mentor_ph_no" name="mentor_ph_no" required placeholder="Ph-No *" required/>
                                    </div>
                                    
                                     <div class="form-group">
                                        <input type="text" class="form-control" id="mentor_city" name="mentor_city" required placeholder="City *" required/>
                                    </div>
                                    
                                     <div class="form-group">
                                        <input type="text" class="form-control" id="mentor_country" name="mentor_country" required placeholder="Country *" required/>
                                    </div>
                                    </div>
                                    <br>
                                    <div class="col-md-6">
                                    &nbsp;&nbsp;&nbsp;&nbsp;<label for="image">Project to be contributed : -</label>
                                     <div class="form-group">
                                        <input type="text" class="form-control" id="mentor_past_exp" name="mentor_past_exp" required placeholder="Past Experience (if any) *" required/>
                                    </div>
                                    
                                     <div class="form-group">
                                          <!-- <input type="text" list="mentor_domain" name="mentor_domain" class="form-control" placeholder="Project Domain *"/> -->
                                          <select class="form-control" id="mentor_domain" name="mentor_domain">
                                            <option value="-1">Select your domain</option>
                                            <option value="AI-ML">AI-ML</option>
                                            <option value="WEB-DEV">WEB-DEV</option>
                                            <option value="APP-DEV">APP-DEV</option>
                                            <option value="IOT/HARDWARE">IOT/HARDWARE</option>
                                            <option value="OTHERS">OTHERS</option>
                                          </select>
                                    </div>
                                    
                                    <div class="form-group">
                                      
                                    </div>
                              
                                </div>
                            </div>
                            <br>
                            &nbsp;&nbsp;&nbsp;&nbsp;<label for="image">Your Socials : -</label>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="lead_linkedin" name="lead_linkedin" required placeholder="linkedin *" value=""/>
                                </div>
                              </div>
                              <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="lead_github" name="lead_github" required placeholder="Github *" value=""/>
                                </div>
                                   </div>
                              <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="lead_twitter" name="lead_twitter" placeholder="Twitter" value=""/>
                                </div>
                              </div>
                              <br>
                            <p align="right"><input type="submit" class="btnSubmit" data-bs-toggle="collapse" name="submit" value="Submit" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree"></p>
                        </div>
                        
                    </div>
                </div>
              </div>
            </div>
          </div>
      </div>
