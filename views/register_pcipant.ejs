    <script>
      function preloader() {
        window.addEventListener('load', () => {
          document.querySelector('.preloader').classList.add('fade-out');
          setTimeout(() => {
            document.querySelector('.preloader').style.display = 'none';
          }, 600);
        });
      }
      preloader();
    </script>
    <header id="header" class="fixed-top d-flex align-items-center" style="margin-bottom: 100px;">
